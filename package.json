{
  "name": "talaseen",
  "version": "1.0.0",
  "description": "Gold marketplace platform - Etsy-like experience for Iranian gold sellers",
  "private": true,
  "workspaces": [
    "services/backend",
    "services/frontend",
    "services/vendor-panel"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:vendor\"",
    "dev:backend": "npm run dev --workspace=services/backend",
    "dev:frontend": "npm run dev --workspace=services/frontend",
    "dev:vendor": "npm run dev --workspace=services/vendor-panel",
    "build": "npm run build --workspaces",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
