# ========================================
# تنظیمات محیط Production برای سرور
# ========================================
# این فایل را به نام .env در روت پروژه کپی کنید

# ========================================
# Database (PostgreSQL)
# ========================================
POSTGRES_USER=talaseen
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!@#
POSTGRES_DB=talaseen

# ========================================
# Backend Environment
# ========================================
# URL اتصال به دیتابیس (از داخل Docker)
DATABASE_URL=postgresql://talaseen:CHANGE_THIS_STRONG_PASSWORD_123!@#@postgres:5432/talaseen

# پورت Backend
PORT=4000

# JWT Secrets - حتما تغییر بدهید!
# برای ساخت secret جدید: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_JWT_SECRET_USE_OPENSSL_RAND_BASE64_32
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_USE_OPENSSL_RAND_BASE64_32
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Google OAuth - حتما تغییر بدهید!
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_CALLBACK_URL=https://talaseen.com/api/auth/google/callback

# Frontend URL (برای Redirect بعد از لاگین)
FRONTEND_URL=https://talaseen.com
FRONTEND_CALLBACK_URL=https://talaseen.com/auth/callback

# ========================================
# Frontend Environment
# ========================================
# استفاده از مسیر نسبی برای API (یعنی همان دومین استفاده شود)
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_BACKEND_URL=https://talaseen.com
